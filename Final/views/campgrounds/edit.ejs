<%- include("../partials/header") %>

<div class="container">
    
    <div class="row">
        <h1 style = "text-align: center;">Edit <%= cg.name %></h1>
        <div style = "width: 30%; margin: 25px auto;">
            <form action="/campgrounds/<%=cg._id%>/?_method=put" method = "post">
                <div class="form-group">
                    <input class ="form-control" type="text" value = "<%=cg.name%>" name="cg[name]" >
                </div>
                <div class="form-group">
                    <input class = "form-control" type="number" valye = "<%=cg.price%>" name="cg[price]" min = "0.01" step = "0.01">
                </div>
                <div class="form-group">
                    <input class = "form-control" type="text" value="<%=cg.image%>" name="cg[image]">
                </div>
                <div class ="form-group">
                    <input class = "form-control" type="text" value = "<%=cg.description%>" placeholder="cg[description]">
                </div>
                <div class="form-group">
                    <button class = "btn btn-lg btn-primary btn-default btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
        
    </div>
    <%- include("../partials/footer") %>
    
</div>