<%- include("../partials/header") %>

<style> 
img{
    width: 300px;
    height: 300px;
}
</style>
<% if (cg){ %>
<h1><%= cg.name %></h1>

<img src="<%= cg.image %>" alt="">

<p><%= cg.description %></p>

<p>
    <a class = "btn btn-success" href="/campgrounds/<%=cg._id%>/comments/new">Add Comment</a>
</p>

<% cg.comments.forEach((comment) => { %>
<p>
    <strong><%=comment.author%></strong> - <%=comment.text%>
</p>
<% }) %>

<% } else {%>
    <h1>Could not find campground</h1>
    <a href="/campgrounds">Go Back</a>

<%} %>

<%- include("../partials/footer") %>
